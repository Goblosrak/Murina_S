<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="001-create-decks" author="system">
        <createTable tableName="decks">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="author" type="VARCHAR(200)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-cards" author="system">
        <createTable tableName="cards">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="image_url" type="VARCHAR(500)"/>
            <column name="suit" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="number" type="INTEGER"/>
            <column name="upright_meaning" type="VARCHAR(1000)"/>
            <column name="reversed_meaning" type="VARCHAR(1000)"/>
            <column name="deck_id" type="INTEGER"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint
            baseTableName="cards"
            baseColumnNames="deck_id"
            constraintName="fk_cards_deck_id"
            referencedTableName="decks"
            referencedColumnNames="id"
            onDelete="SET NULL"/>
    </changeSet>

    <changeSet id="003-create-spreads" author="system">
        <createTable tableName="spreads">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="number_of_positions" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="position_names" type="VARCHAR(500)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="004-create-spread-cards" author="system">
        <createTable tableName="spread_cards">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="spread_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="card_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="is_reversed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
            baseTableName="spread_cards"
            baseColumnNames="spread_id"
            constraintName="fk_spread_cards_spread_id"
            referencedTableName="spreads"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
        <addForeignKeyConstraint
            baseTableName="spread_cards"
            baseColumnNames="card_id"
            constraintName="fk_spread_cards_card_id"
            referencedTableName="cards"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
        <createIndex tableName="spread_cards" indexName="idx_spread_cards_spread_position">
            <column name="spread_id"/>
            <column name="position"/>
        </createIndex>
        <addUniqueConstraint
            tableName="spread_cards"
            columnNames="spread_id,position"
            constraintName="uq_spread_cards_spread_position"/>
    </changeSet>

    <changeSet id="005-create-users" author="system">
        <createTable tableName="users">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(200)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)" defaultValue="User">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
        <createIndex tableName="users" indexName="idx_users_username">
            <column name="username"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>
    </changeSet>

    <changeSet id="006-create-api-keys" author="system">
        <createTable tableName="api_keys">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="VARCHAR(500)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="api_keys" indexName="idx_api_keys_key">
            <column name="key"/>
        </createIndex>
    </changeSet>

    <changeSet id="007-create-databasechangelog-table" author="system">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="databasechangelog"/>
            </not>
        </preConditions>
        <comment>Liquibase tracking table will be created automatically</comment>
    </changeSet>

</databaseChangeLog>
